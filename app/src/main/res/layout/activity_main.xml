<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/textView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.martindolinsky.smarthome.MainActivity">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5px"
        android:layout_marginTop="16dp"
        android:text="LED 1 "
        android:textColor="@android:color/holo_green_dark"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/switch1"
        android:layout_marginBottom="5px"
        android:text="LED 2 "
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <Switch
        android:id="@+id/switch3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/switch2"
        android:layout_below="@+id/switch2"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5px"
        android:text="LED 3 "
        android:textColor="@android:color/holo_red_dark"

        android:textSize="20sp" />


    <Button
        android:id="@+id/plus_btn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/minus_btn"
        android:layout_alignBottom="@+id/minus_btn"
        android:layout_alignParentStart="true"
        android:text="+1"
        android:textColor="@android:color/holo_green_light"
        android:textSize="65px"
        android:padding="10px"
        />

    <Button
        android:id="@+id/plus5_btn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/plus_btn"
        android:layout_marginTop="5px"
        android:text="+5"
        android:textColor="@android:color/holo_green_light"
        android:textSize="65px"
        android:padding="10px"/>

    <Button
        android:id="@+id/minus_btn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/switch3"
        android:layout_marginRight="20px"
        android:layout_marginStart="5px"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/plus_btn"
        android:text="-1"
        android:textColor="@android:color/holo_red_light"
        android:textSize="65px"
        android:padding="10px"/>

    <Button
        android:id="@+id/minus5_btn"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/plus5_btn"
        android:layout_alignBottom="@+id/plus5_btn"
        android:layout_marginStart="5px"
        android:layout_toEndOf="@+id/plus5_btn"
        android:text="-5"
        android:textColor="@android:color/holo_red_light"
        android:textSize="65px"
        android:padding="10px"/>


    <Button
        android:id="@+id/bluetooth_connect_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Connect to Bluetooth Device"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/minus_btn"
        android:layout_marginTop="200dp"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user"
        android:layout_alignBottom="@+id/user"
        android:layout_alignParentStart="true"
        android:text="PoslednÃ½ vstup:  "
        android:textColor="@android:color/white"
        android:textSize="30sp" />


</RelativeLayout>